<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/educator_backgrpund"
    tools:context=".report_problem"
    tools:ignore="MissingDefaultResource">

    <include layout="@layout/navigation_action_bar" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.12" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.80" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_back_h_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.75" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
        app:layout_constraintVertical_bias="0.0">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/help_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/help_icon_15x"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/guideline9"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/imgname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:drawableRight="@drawable/upload_icon_2x"
                android:drawablePadding="15dp"
                android:gravity="bottom"
                android:onClick="onImgGalleryCliked"
                android:text="اضغط هنا لرفع صورة لقطة الشاشة"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/problem_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:drawableRight="@drawable/problem_icon_15x"
                android:drawablePadding="15dp"
                android:text="نوع المشكلة"
                android:textColor="#0B365C"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/radioButtonsGroup"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/imgname"
                app:layout_constraintVertical_bias="0.0" />

            <RadioGroup
                android:id="@+id/radioButtonsGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/guideline5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline4">

                <RadioButton
                    android:id="@+id/Problem_type_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="isChosed"
                    android:paddingRight="102dp"
                    android:text=" عدم تطابق الصوت مع الكلمة أو الجملة"
                    android:drawablePadding="10dp"
                    android:textSize="30sp" />

                <RadioButton
                    android:id="@+id/Problem_type_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="isChosed"
                    android:paddingRight="102dp"
                    android:text=" عدم وضوح الصوت"
                    android:drawablePadding="10dp"
                    android:textSize="30dp" />

                <RadioButton
                    android:id="@+id/Problem_type_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="isChosed"
                    android:paddingRight="102dp"
                    android:text=" الصوت لا يعمل"
                    android:drawablePadding="10dp"
                    android:textSize="30dp" />

                <RadioButton
                    android:id="@+id/Problem_type_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="isChosed"
                    android:paddingRight="102dp"
                    android:text=" تم تقييم الطفل بشكل خاطئ"
                    android:drawablePadding="10dp"
                    android:textSize="30dp" />

                <RadioButton
                    android:id="@+id/Problem_type_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="isChosed"
                    android:paddingRight="102dp"
                    android:text=" المحتوى لا يتطابق مع الصورة المعروضة"
                    android:drawablePadding="10dp"
                    android:textSize="30dp" />

                <RadioButton
                    android:id="@+id/Problem_type_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="isChosed"
                    android:paddingRight="102dp"
                    android:text=" لم يتم سماع تقييم الطفل"
                    android:drawablePadding="10dp"
                    android:textSize="30dp" />

                <RadioButton
                    android:id="@+id/Problem_type_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="isChosed"
                    android:paddingRight="102dp"
                    android:text=" زر تسجيل الصوت لا يعمل"
                    android:drawablePadding="10dp"
                    android:textSize="30dp" />


                <RadioButton
                    android:id="@+id/more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@android:drawable/btn_radio"
                    android:gravity="right"
                    android:layoutDirection="rtl"
                    android:onClick="isChosed"
                    android:paddingRight="102dp"
                    android:drawablePadding="10dp"
                    android:text="أخرى"
                    android:textSize="30dp"
                    tools:ignore="OnClick" />

                <EditText
                    android:id="@+id/moredetails"
                    android:layout_width="380dp"
                    android:layout_height="180dp"
                    android:layout_marginRight="102dp"
                    android:background="#F2F2F2"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:text=" "
                    android:textColor="#7D7C7C"
                    android:textColorHint="@android:color/black"
                    tools:hint="الوصف"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="170dp"
                    tools:layout_editor_absoluteY="192dp" />


            </RadioGroup>


            <android.support.constraint.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="20dp"
                app:layout_constraintGuide_percent="0.98" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="20dp"
                app:layout_constraintGuide_percent="0.4" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="20dp"
                app:layout_constraintGuide_percent="0.78" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline9"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="20dp"
                app:layout_constraintGuide_percent="0.1" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline10"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="982dp"
                app:layout_constraintGuide_percent="0.93" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline11"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="20dp"
                app:layout_constraintGuide_percent="0.02" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مساعدة"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/help_btn"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/help_btn"
                app:layout_constraintTop_toBottomOf="@+id/help_btn" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/reportButn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button"
        android:text="إبلاغ عن المشكلة"
        android:textColor="#ffffff"
        android:textSize="18pt"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintDimensionRatio="h,16:2.3"
        app:layout_constraintEnd_toStartOf="@+id/guideline_back_h_2"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toBottomOf="@+id/guideline2" />


</android.support.constraint.ConstraintLayout>
